<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword">

    <TextView
        android:id="@+id/tvChangeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Cambia tu contraseña"
        android:textSize="@dimen/size_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvChangeTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="8dp"
        android:text="@string/text_clave" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvClave"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:background="@drawable/et_round"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="@dimen/padding_edt" />

    <TextView
        android:id="@+id/tvRepetirClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_pass"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:text="@string/txt_repetir_clave" />

    <EditText
        android:id="@+id/edt_pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRepetirClave"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:background="@drawable/et_round"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="@dimen/padding_edt" />

    <Button
        android:id="@+id/btn_cambiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_default"
        android:layout_marginTop="64dp"
        android:background="@drawable/btn_round"
        android:text="Cambiar contraseña"
        android:textColor="@color/white" />
</RelativeLayout>